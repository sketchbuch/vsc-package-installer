{
  "compilerOptions": {
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "test",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "exclude": [
    ".cache", 
    ".vscode-test", 
    "build",
    "dist",
    "node_modules",
    "out",
    "/test"
  ],
  "include": [
    "resources/js/**/*",
    "src/**/*",
  ]
}
